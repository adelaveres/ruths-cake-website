---
import BaseLayout from "../components/BaseLayout.astro";
import "../styles/oferta_nunta.css";
---

<BaseLayout>

    <main>
        <section class="cards-wrapper">

            <div class="card option1">
                <div class="breakline">
                    <img src="/images/line_heart_left.PNG" alt="">
                    <div class="option-title">
                        <span> Basic </span>
                        <span><strong>18 lei</strong> / pers</span>
                    </div>
                    <img src="/images/line_heart_right.PNG" alt="">
                </div>
    
                <ul>
                    <li>Eclere*</li>
                    <li>Mini mousse*</li>
                    <li>Tarte</li>	
                    <li>Pavlova</li>
                    <li>Cannoli</li>
                    <li>Cupcakes</li>
                    <li>Cheesecake</li>
                    <li>Bezele</li>
                    <li>Crinkles</li>
                </ul>

                <p>3 prăjituri de casă / pers</p>
                <p>* 3 sortimente</p>
            </div>

            <div class="card option2">
                <div class="breakline">
                    <img src="/images/line_heart_left.PNG" alt="">
                    <div class="option-title">
                        <span>Premium</span>
