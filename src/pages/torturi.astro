---
import BaseLayout from "../components/BaseLayout.astro";
import "../styles/torturi.css";
const meta={
    title: "Torturi Satu Mare - Ruth's Cake",
    description: "Torturi personalizate în Satu Mare. Alegem împreună gustul potrivit, designul pe care îl dorești iar de calitate ne ocupăm noi! Comandă acum!",
    keywords: "torturi, satu mare"
}

---
<BaseLayout {...meta}>
	<section>
        
        <div id="cards-wrapper">

			<a href="/torturi_comanda" id="torturi_comanda" class="card">
				<div class="img-wrapper hover-effect">
					<img src="https://adela-maris.sirv.com/Images/Adina_website/torturi/felii.jpeg?q=100" alt="Tort Comanda">
					<span id="order_cakes_span">Torturi comandă</span>
				</div>
			</a>

            <a href="/torturi_galerie" id="torturi_galerie" class="card">
				<div class="img-wrapper hover-effect">
					<img src="https://adela-maris.sirv.com/Images/Adina_website/torturi/cakes_collage.png?q=100" alt="Galerie Foto">
					<span id="gallery_span">Galerie Foto</span>
				</div>
			</a>

        </div>

           
        
    </section>

</BaseLayout>