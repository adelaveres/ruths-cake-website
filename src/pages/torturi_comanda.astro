---
import BaseLayout from "../components/BaseLayout.astro";
import CakeCard from "../components/CakeCard.astro";
import "../styles/torturi_comanda.css";

--- 
<BaseLayout>
	<section>
        <div id="torturi_comanda" class="breakline">
            <img src="/images/line_heart_left.PNG" alt="">
            <span>Torturi de comandă</span>
            <img src="/images/line_heart_right.PNG" alt="">
        </div>

        <div id="order-cakes-wrapper">
            
            <CakeCard src="https://adela-maris.sirv.com/Images/Adina_website/torturi/torturi_comanda/kinder.jpeg?q=100" 
                alt="Tort Kinder"
                cakeTitle="Kinder Bueno"
                price="95"
                creamInfo="ciocolată albă, ciocolată neagră, inserție crunchy."/>

            <CakeCard src="https://adela-maris.sirv.com/Images/Adina_website/torturi/torturi_comanda/Primavera2.jpeg?q=100" 
                alt="Tort Primavera"
                cakeTitle="Primavera"
                price="95"
                creamInfo="ciocolată albă, inserție de zmeură, mousse de zmeură."/>    

            <CakeCard src="https://adela-maris.sirv.com/Images/Adina_website/torturi/torturi_comanda/caramel_zmeura2.jpeg?q=100" 
                alt="Tort Caramel"
                cakeTitle="Caramel și zmeură"
                price="95"
                creamInfo="ciocolată albă, inserție caramel, inserție zmeură, bucăți de zmeură."/>    

            <CakeCard src="https://adela-maris.sirv.com/Images/Adina_website/torturi/torturi_comanda/tort_visine.jpeg?q=100" 
                alt="Tort Visine"
                cakeTitle="Vișine"
                price="95"
                creamInfo="ciocolată albă / ciocolată neagră, inserție de vișine."/>    
           
            <CakeCard src="https://adela-maris.sirv.com/Images/Adina_website/torturi/torturi_comanda/snickers.jpeg?q=100" 
                alt="Tort Snickers"
                cakeTitle="Snickers"
                price="95"
                creamInfo="ciocolată neagră, caramel, arahide crocante."/>    


            <CakeCard src="https://adela-maris.sirv.com/Images/Adina_website/torturi/torturi_comanda/zmeura_fistic.jpeg?q=100" 
                alt="Tort Fistic"
                cakeTitle="Zmeură și fistic"
                price="95"
                creamInfo="ciocolată albă / ciocolată neagră, bucați zmeură, bucăți fistic."/>    

            <CakeCard src="https://adela-maris.sirv.com/Images/Adina_website/torturi/torturi_comanda/felii_box.jpeg?q=100" 
                alt="Tort Raffaello"
                cakeTitle="Raffaello"
                price="95"
                creamInfo="ciocolată albă, crocant de Raffaello."
                noPicYet=true/>   
                
            <CakeCard src="https://adela-maris.sirv.com/Images/Adina_website/torturi/torturi_comanda/felii_box.jpeg?q=100" 
                alt="Tort Bounty"
                cakeTitle="Bounty"
                price="90"
                creamInfo="ciocolată neagră, cremă de cocos."
                noPicYet=true/> 

            <CakeCard src="https://adela-maris.sirv.com/Images/Adina_website/torturi/torturi_comanda/felii_box.jpeg?q=100" 
                alt="Tort Dietetic"
                cakeTitle="Dietetic"
                price="95"
                creamInfo="brânză philadelphia, cremă de fructe, fructe (afine, zmeură, mure la alegere)."
                noPicYet=true/> 

            <CakeCard src="https://adela-maris.sirv.com/Images/Adina_website/torturi/torturi_comanda/felii_box.jpeg?q=100"
                alt="Tort Exotic"
                cakeTitle="Exotic"
                price="100"
                creamInfo="cremă de brânză, ciocolată albă, fructul pasiunii, mango."
                noPicYet=true/> 

            <CakeCard src="https://adela-maris.sirv.com/Images/Adina_website/torturi/torturi_comanda/felii_box.jpeg?q=100"
                alt="Tort Profiterols"
                cakeTitle="Profiterols"
                price="100"
                creamInfo="ciocolată neagră și profiterols, ciocolată albă și zmeură."
                noPicYet=true /> 

           
            
            <!-- 
            <div class="modal">
                <a href="javascript:void(0)" class = "closebtn">&times;</a>
                <img class="modal-content" id="imgModal">

            </div> -->



        </div>

        <!-- The Modal -->
        <div class="modal">

            <!-- The Close Button -->
            <a href="javascript:void(0)" class = "closebtn">&times;</a>

            <!-- Modal Content (The Image) -->
            <img class="modal-content" id="imgModal">

        </div>
        

    </section>

    <script src="../torturi_comanda.js"></script>
</BaseLayout>